# ==============================================================================
# AdonisJS Project Options (used on first run only)
# ==============================================================================

# Package manager: npm, pnpm, yarn
PKG_MANAGER=npm

# Starter kit: web, api, slim, inertia
ADONIS_KIT=web

# Database driver: postgres, mysql, mssql, sqlite
ADONIS_DB=postgres

# Auth guard: session, access_tokens, basic_auth
ADONIS_AUTH=session

# Inertia options (only used when ADONIS_KIT=inertia)
# ADONIS_INERTIA_ADAPTER=react  # react, vue, solid, svelte
# ADONIS_INERTIA_SSR=false

# ==============================================================================
# Docker Compose profiles
# Must match ADONIS_DB (leave empty for sqlite)
# ==============================================================================
COMPOSE_PROFILES=postgres

# ==============================================================================
# Application
# ==============================================================================
NODE_ENV=development
PORT=3333
# APP_KEY=                       # Auto-generated by AdonisJS on project creation

# ==============================================================================
# Docker
# ==============================================================================
IMAGES_PREFIX=

# ==============================================================================
# Database connection
# ==============================================================================
DB_USER=adonis
DB_PASSWORD=!ChangeMe!
DB_DATABASE=adonis
# DB_HOST=database               # Auto-set (uses Docker network alias)
# DB_PORT=                       # Auto-detected from ADONIS_DB

# PostgreSQL specific
POSTGRES_VERSION=16
# POSTGRES_PORT=5432             # Exposed port for local tools

# MySQL specific
# MYSQL_VERSION=8.0
# MYSQL_ROOT_PASSWORD=!ChangeMe!
# MYSQL_PORT=3306

# MSSQL specific
# MSSQL_VERSION=2022
# MSSQL_PORT=1433

# ==============================================================================
# Production
# ==============================================================================
APP_REPLICAS=1
